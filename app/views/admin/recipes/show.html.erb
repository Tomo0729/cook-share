<div class="container my-5">
 <div class="row">
  <div class="col-9 my-3">

<!-- 画像 -->
	  <div class="col-5">
       <div class="row">
        <% if @recipe.image.attached? %>
          <%= image_tag @recipe.image, size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
	     </div>
    </div>
<!-- タイトル -->
    <div class="col-5">
     <div class="row mt-3">
      <h4><strong><%= @recipe.name %></strong></h4>
     </div>
<!-- 説明 -->
     <div class="row mt-3">
      <p><%= @recipe.introduction %></p>
     </div>
<!-- 材料 -->
     <div class="row mt-3"><strong>材料</strong></div>
     <% @recipe.ingredients.each do |ingredient| %>
      <p><%= ingredient.name %></p>
      <p><%= ingredient.quantity %></p>
     <% end %>


<!-- 作り方 -->
　　　<div class="row mt-3"><strong>作り方</strong></div>
     <% @recipe.cook_steps.each do |cook_step| %>
      <p><%= cook_step.direction %></p>
     <% end %>


    </div>
  </div>
 </div>
</div>
