<div class="container my-5">
  <div class="row">
    <div class-"offset-1">
      <h2 class="red-border px-3">コメント一覧</h2>
    </div>
  </div>
  <table class= "table">
   <thead>
    <tr class= "active">
     <th>会員ID</th>
     <th>氏名</th>
     <th>コメント</th>
     <th>ステータス</th>
     <th></th>
     <th></th>
    </tr>
   </thead>
   <tbody>
    <% @comments.each do |comment| %>
     <tr>
      <td><%= comment.user.id %></td>
      <td><%= comment.user.last_name %><%= comment.user.first_name %></td>
      <td><%= comment.comment %></td>
      <td><% if comment.user.is_deleted == false %>
           <div class="btn btn-info text-white p-1 ml-1 rounded">
              有効会員
           </div>
          <% else %>
           <div class="btn btn-danger text-white p-1 ml-1 rounded">
              退会済み
           <div>
          <% end %>
      </td>
      <td></td>
      <td>
          <%= link_to  admin_comment_path(comment.id),  method: :delete, "data-confirm" => "削除してよろしいですか？" , :style =>"color: #432c28;", class: "btn btn-outline"  do %>
           <h4><i class="fa-solid fa-trash"></i></h4>
          <% end %>
      </td>
     </tr>
    <% end %>
   </tbody>
  </table>
</div>
