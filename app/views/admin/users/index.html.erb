<main>
 <div class="container my-5">
  <div class="row">
    <div class-"offset-1">
      <h2 class="red-border px-3"><i class="fa-solid fa-user"></i>会員一覧</h2>
    </div>
  </div>
  <table class= "table">
   <thead>
    <tr class= "active">
     <th>会員ID</th>
     <th>氏名</th>
     <th>メールアドレス</th>
     <th>ステータス</th>
     <th></th>
    </tr>
   </thead>
   <tbody>
    <% @users.each do |user| %>
     <tr>
      <td><%= user.id %></td>
      <td><%= link_to admin_user_path(user) do %><%= user.last_name %><%= user.first_name %> <% end %>　</td>
      <td><%= user.email %></td>
      <td><% if user.is_deleted == false %>
           <div class="btn btn-info text-white p-1 ml-1 rounded">
              有効会員
           </div>
          <% else %>
           <div class="btn btn-danger text-white p-1 ml-1 rounded">
              退会済み
           <div>
          <% end %>
      </td>
     </tr>
    <% end %>
   </tbody>
  </table>
 </div>
</main>
