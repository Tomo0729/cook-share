<div class="container my-5">
 <div class="row">
  <div class="col-9 my-3">
  	<div class="row">
<!-- 画像 -->
	  <div class="col-5">

      </div>
<!-- タイトル -->
    <div class="col-5">
     <div class="row mt-3">
      <h4><strong><%= @recipe.name %></strong></h4>
     </div>
<!-- 説明 -->
     <div class="row mt-3">
      <p><%= @recipe.introduction %></p>
     </div>
<!-- 材料 -->
     <div class="row mt-3"><strong>材料</strong></div>
     <% @recipe.ingredients.each do |ingredient| %>
      <p><%= ingredient.name %></p>
      <p><%= ingredient.quantity %></p>
     <% end %>


<!-- 作り方 -->
　　　<div class="row mt-3"><strong>作り方</strong></div>
     <% @recipe.cook_steps.each do |cook_step| %>

      <p><%= cook_step.direction %></p>
     <% end %>

  <%= link_to "編集する", edit_public_recipe_path, class: "btn btn-success" %>

  <br>
  <br>
  <section class="favorite">
   <% if @recipe.favorited_by?(current_user) %>
    <p>
      <%= link_to public_recipe_favorites_path(@recipe), method: :delete do %>
        ♥<%= @recipe.favorites.count %> いいね
      <% end %>
    </p>
   <% else %>
    <p>
      <%= link_to public_recipe_favorites_path(@recipe), method: :post do %>
        ♡<%= @recipe.favorites.count %> いいね
      <% end %>
    </p>
   <% end %>

</section>

　<div>
    <p>コメント件数：<%= @recipe.comments.count %></p>
  <% @recipe.comments.each do |comment| %>
    <%= comment.user.last_name %><%= comment.user.first_name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
  <% end %>
  <%= @comment.comment %>
</div>
<div>
  <%= form_with model: [:public, @recipe, @comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>


     </div>
    </div>
   </div>
  </div>

 </div>
</div>
