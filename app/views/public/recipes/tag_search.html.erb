<div class="container my-5">
   <div class= "cooking-tittle">
   <% if @tasearch.present? %>
    <h2 class="recipe-heading">「<%= @tag_search %>」の検索結果<i class="fa-solid fa-magnifying-glass"></i></h2>
   <% else %>
  　<h2 class="recipe-heading"><i class="fa-solid fa-magnifying-glass"></i>検索結果!!</h2>
   <% end %>
   </div>
   <div class="row">
     <% @recipes.each do |recipe| %>
          <div class="box col-3">
           <%= link_to public_recipe_path(recipe), :style =>"color: #432c28;" do %>
            <% if recipe.image.attached? %>
             <%= image_tag recipe.image, size: "200x200",class:"card-img-top" %>
            <% else %>
             <%= image_tag 'no_image', size: "200x200",class:"card-img-top" %>
            <% end %>
		         <br>
		         <br>
		         <h4><strong><%= recipe.name %></strong></h4>
		         <p>♥<%= recipe.favorites.count %> いいね</p>
		         <h6><%= recipe.introduction %></h6>
		       <% end %>
          </div>
     <% end %>
    </div>
    <div class="pagination">
	   <%= paginate @recipes %>
	  </div>
</div>
